- if f.object.errors.any?
  .d-inline-flex.remove-node.mb-3.pb-3.border-bottom.shadow-sm.w-100
    .d-flex.flex-column.w-100
      - f.object.errors.full_messages.each do |message|
        .alert.alert-danger.w-100= message
.d-inline-flex.remove-node.mb-3.pb-3.border-bottom.shadow-sm.w-100.assigned_resource-row
  .flex-input-item
    - if params[:id]
      = f.hidden_field :project_id, value: params[:id]
    .form-group
      = f.label :resource_id
      = f.collection_select :resource_id, Resource.all, :id, :name, { prompt: true }, { class: 'form-control' }
  .flex-input-item
    .form-group
      = f.label :resource_type_id
      = f.select :resource_type_id, options_for_select(Settings.resource_types.to_a, f.object.resource_type_id), {}, class: 'form-control'
  .flex-input-item.distribution_involvement
    .form-group
      = f.label :distribution_involvement
      = f.text_field :distribution_involvement, class: 'form-control', size: 12
  .flex-input-item.d-none.allocation_involvement
    .form-group
      = f.label :allocation_involvement
      = f.text_field :allocation_involvement, class: 'form-control', size: 12
  .flex-input-item
    .form-group
      = f.label :forecast_type_id
      = f.select :forecast_type_id, options_for_select(Settings.assigned_resource.forecast.types.to_a, f.object.forecast_type_id), {}, class: 'form-control forecast_type', onchange: 'changeInvolvementField(event);'
  .flex-input-item
    .form-group
      = f.label :start_date
      = f.date_field :start_date, class: 'form-control', value: f.object.start_date&.to_date
  .flex-input-item
    .form-group
      = f.label :end_date
      = f.date_field :end_date, class: 'form-control', value: f.object.end_date&.to_date
  .flex-input-item
    .form-group
      = link_to_remove_association 'X', f, wrapper_class: 'remove-node', hide_style: 'display: none! important',
        class: 'btn btn-sm btn-danger btn-remove-assoc'
