      .form-group
        = label_tag :status
        = text_field_tag :status, @project.status, class: 'form-control', readonly: true

  .d-flex.border-bottom
    .flex-input-item
      .form-group
        = label_tag :price
        = text_field_tag :price, @project.price, class: 'form-control', readonly: true
    .flex-input-item
      .form-group
        = label_tag :currency
        = text_field_tag :currency, @project.currency, class: 'form-control', readonly: true
    .flex-input-item
      .form-group
        = label_tag :start_date
        = text_field_tag :start_date, @project.start_date.to_date, class: 'form-control', readonly: true
    .flex-input-item
      .form-group
        = label_tag :end_date
        = text_field_tag :end_date, @project.end_date.to_date, class: 'form-control', readonly: true

