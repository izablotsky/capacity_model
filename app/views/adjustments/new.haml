.w-100
  .d-flex
    .flex-input-item
      .form-group
        = label_tag :uid
        = text_field_tag :uid, @project.uid, readonly: true, class: 'form-control', size: 7
    .flex-input-item.flex-fill
      .form-group
        = label_tag :name
        = text_field_tag :name, @project.name, class: 'form-control', readonly: true
    .flex-input-item
      .form-group.w-33
        = label_tag :client_id
        = text_field_tag :client_name, @project.client, class: 'form-control', readonly: true
